---
import { SITE } from '~/config.mjs';
import { getCanonical, getHomePermalink } from '~/utils/permalinks';
import LandingLayout from '~/layouts/LandingLayout.astro';

import Splash from '~/components/widgets/Splash.astro';
import Intro from '~/components/widgets/Intro.astro';
import Note from '~/components/widgets/Note.astro';
import Features from '~/components/widgets/Features.astro';
import Price from '~/components/widgets/Price.astro';
import Steps from '~/components/widgets/Steps.astro';
import Features3 from '~/components/widgets/Features3.astro';
import HighlightedPosts from '~/components/blog/HighlightedPosts.astro';
import FAQs from '~/components/widgets/FAQs.astro';
import Stats from '~/components/widgets/Stats.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';
import Services from '~/components/widgets/Services.astro';

import JumbotronTest from '~/components/in-progress/JumbotronTest.astro';

import type { NavLink, MetaData } from '~/types';

const meta: MetaData = {
	title: SITE.title,
	description: SITE.description,
	canonical: getCanonical(getHomePermalink()),
};

const globalLinks: Array<NavLink> = [
	{ title: 'Brand Identity', url: '#features' },
	{ title: 'Web Design', url: '#compatibility' },
	{ title: 'App Development', url: '#showcase' },
	{ title: 'Showcase', url: '#showcase' },
];

const localLinks: Array<NavLink> = [
	{ title: 'Why Virgos', url: '#features' },
	{ title: 'Services', url: '#compatibility' },
	{ title: 'Showcase', url: '#showcase' },
];

const socialLinks = [
	{ title: 'facebook', desc: 'Facebook', icon: 'mdi:facebook', url: '#' },
	{ title: 'instagram', desc: 'Instagram', icon: 'mdi:instagram', url: '#' },
	{ title: 'twitter', desc: 'Twitter', icon: 'mdi:twitter', url: '#' },
];
---

<LandingLayout meta={meta} globalLinks={globalLinks} localLinks={localLinks} socialLinks={socialLinks}>
	<Splash slot="splash" />
	<Intro />
	<JumbotronTest />
	<Services />
	<Note />
	<Features />
	<!-- 	<Steps /> -->
	<Services />
	<Price />
	<Features3 />
	<HighlightedPosts />
	<FAQs />
	<Stats />
	<CallToAction />
</LandingLayout>
