---
import Mockup from './Mockup.astro';
export interface Props {
	id: string;
	bg?: 'primary' | 'secondary';
}

const { id, bg = 'default' } = Astro.props;

const bgColors = {
	primary: 'bg-primary',
	secondary: 'bg-secondary',
	default: 'bg-default',
};

let background = bgColors[bg];
---

<div id={`${id}-card-large`} class={`${background} w-full`}>
	<!--  -->
	<div class="w-full">
		<div class="relative max-w-screen-xl min-h-[100px] bg-secondary mx-auto md:rounded-t-2xl shadow-md">Cap</div>
		<div class="sticky top-0 max-w-screen-xl bg-secondary h-screen mx-auto shadow-md">
			<div class="grid md:grid-cols-2 bg-secondary">
				<div class="h-full transform translate-y-1/2">
					<div class="md:mx-auto text-center py-8 px-16">
						<p class="text-base text-primary dark:text-primary-200 font-semibold tracking-wide uppercase">Features</p>
						<h3 class="text-2xl md:text-3xl font-bold leading-tighter tracking-tighter mb-4 font-heading text-primary">
							<span class="whitespace-nowrap">Large Screens</span>
						</h3>
						<p class="max-w-prose mx-auto text-center text-md text-primary"></p>
					</div>
				</div>

				<div class="mx-auto scale-100 z-30">
					<Mockup device="imac" imageUrl="/src/assets/images/bg-imac.jpg" />
				</div>
			</div>
		</div>

		<div class="sticky top-0 max-w-screen-xl h-screen mx-auto shadow-md">
			<div class="grid md:grid-cols-2">
				<div class="h-full transform translate-y-1/2">
					<div class="md:mx-auto text-center py-8 px-16">
						<p class="text-base text-primary dark:text-primary-200 font-semibold tracking-wide uppercase">Features</p>
