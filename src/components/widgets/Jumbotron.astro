---
import Mockup from './Mockup.astro';
export interface Props {
	id: string;
	bg?: 'primary' | 'secondary';
	title: string;
	description: string;
}

const { id, title, description, bg = 'default' } = Astro.props;

const bgColors = {
	primary: 'bg-primary',
	secondary: 'bg-secondary',
	default: 'bg-default',
};

let background = bgColors[bg];
---

<section id={id} class={`${background} px-2 md:px-4 py-4 flex flex-col items-center gap-4`}>
	<div class="w-full">
		<div class="relative max-w-screen-xl min-h-[500px] bg-secondary mx-auto md:rounded-2xl shadow-md overflow-hidden">
			<div class="grid md:grid-cols-2">
				<div class="h-full transform translate-y-1/2">
					<div class="md:mx-auto text-center py-8 px-16">
						<p class="text-base text-primary dark:text-primary-200 font-semibold tracking-wide uppercase">Features</p>
						<h3 class="text-2xl md:text-3xl font-bold leading-tighter tracking-tighter mb-4 font-heading text-primary">
							<span class="whitespace-nowrap">{title}</span>
						</h3>
						<p class="max-w-prose mx-auto text-center text-md text-primary">
							{description}
						</p>
					</div>
				</div>
				<div class="mx-auto max-h-72 scale-90 md:scale-75 lg:scale-100 translate-y-1/4 md:translate-y-1/2">
					<Mockup device="iphone" imageUrl="/src/assets/images/bg-iphone-14-pro.jpg" />
				</div>
			</div>
		</div>
	</div>
</section>
