---
export interface Props {
	title: 'string';
	description: 'string';
	bg: 'primary' | 'secondary';
}

const { title, description, bg = 'primary' } = Astro.props;

const bgColors = {
	primary: 'bg-primary',
	secondary: 'bg-secondary',
};

let background = bgColors[bg];
---

<div class={`${background} relative py-8`}>
	<div class="mb-10 md:mx-auto sm:text-center md:mb-12 py-8 px-16">
		<p class="text-base text-default font-semibold tracking-wide uppercase">Features</p>
		<h3 class="text-2xl md:text-3xl font-bold leading-tighter tracking-tighter mb-4 font-heading text-default">
			<span class="whitespace-nowrap">{title}</span>
		</h3>
		<!-- <p class="max-w-prose mx-auto text-center text-md text-default">
			<span class="max-w-xs px-12">{description}</span>
		</p> -->
	</div>
</div>
