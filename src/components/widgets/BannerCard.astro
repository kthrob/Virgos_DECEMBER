---
export interface Props {
	id: string;
	title: string;
	bg: 'primary' | 'secondary';
}

const { title, id, bg } = Astro.props;

const bgColors = {
	primary: 'bg-primary',
	secondary: 'bg-secondary',
};

let background = bgColors[bg];
---

<section id={id} class={`${background} py-8 flex flex-col items-center gap-4 space-y-8 scroll-mt-24`}>
	<div class="flex flex-col items-center gap-4">
		<slot name="eyebrow" />
		<h2 class="text-6xl font-extrabold tracking-tight text-center text-gradient">
			{title}
		</h2>
	</div>
	<p class="max-w-xl text-2xl font-extrabold text-center">
		<slot name="lead" />
	</p>
	<slot />
</section>
