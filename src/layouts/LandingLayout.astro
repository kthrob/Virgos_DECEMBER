---
import Announcement from '~/components/widgets/Announcement.astro';
import Footer from '~/components/widgets/Footer.astro';
import Header from '~/components/widgets/Header.astro';
import Layout from '~/layouts/BaseLayout.astro';
import PageNavigation from '~/components/widgets/PageNavigation.astro';
import SkipToContent from '~/components/widgets/SkipToContent.astro';

import type { NavLink, IconLink, MetaData } from '~/types';
export interface Props {
	meta: MetaData;
	globalLinks: Array<NavLink>;
	localLinks: Array<NavLink>;
	socialLinks: Array<IconLink>;
}
const { meta, localLinks, globalLinks, socialLinks } = Astro.props;
---

<Layout {meta}>
	<SkipToContent />
	<Announcement />
	<Header globalLinks={globalLinks} socialLinks={socialLinks} />
	<slot name="splash" />
	<main class="relative">
		<PageNavigation links={localLinks} />
		<slot />
	</main>
	<Footer />
</Layout>
