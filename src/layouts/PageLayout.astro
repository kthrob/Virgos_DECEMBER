---
import Announcement from '~/components/widgets/Announcement.astro';
import Footer from '~/components/widgets/Footer.astro';
import NavGlobal from '~/components/widgets/NavGlobal.astro';
import Layout from '~/layouts/BaseLayout.astro';
import NavLocal from '~/components/widgets/NavLocal.astro';
import SkipToContent from '~/components/widgets/SkipToContent.astro';

import type { NavLink, MetaData } from '~/types';
export interface Props {
	meta: MetaData;
	links: Array<NavLink>;
}
const { meta, links } = Astro.props;
---

<Layout {meta}>
	<SkipToContent />
	<Announcement />
	<NavGlobal links={} />
	<NavLocal links={links} />
	<main>
		<slot />
	</main>
	<Footer />
</Layout>
