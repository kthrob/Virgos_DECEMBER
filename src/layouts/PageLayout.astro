---
import Announcement from '~/components/widgets/Announcement.astro';
import Footer from '~/components/widgets/Footer.astro';
import Header from '~/components/widgets/Header.astro';
import Layout from '~/layouts/BaseLayout.astro';
import PageNavigation from '~/components/widgets/PageNavigation.astro';
import SkipToContent from '~/components/widgets/SkipToContent.astro';

import type { NavItem, SiteMeta } from "~/types";
export interface Props {
	meta: SiteMeta;
	links: Array<NavItem>;
}
const { meta, links} = Astro.props;
---

<Layout {meta}>
	<SkipToContent />
	<Announcement />
	<Header />
	<PageNavigation links={links} />
	<slot name="splash" />
	<main>
		<slot />
	</main>
	<Footer />
</Layout>
