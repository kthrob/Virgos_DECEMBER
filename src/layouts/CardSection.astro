---
export interface Props {
	id: string;
	title: string;
}

const { id, title } = Astro.props;


---

<section id={id} class={`relative bg-default py-8 flex flex-col items-center scroll-mt-24`}>
	<div class="flex flex-col items-center gap-4">
		<slot name="eyebrow" />
		<h2 class=" text-2xl md:text-3xl font-extrabold tracking-tight text-center gradient-text">
			{title}
		</h2>
	</div>
	<slot />
</section>
