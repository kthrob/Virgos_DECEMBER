---
export interface Props {
	id: string;
	bg?: 'primary' | 'secondary';
}

const { title, id, bg = 'default' } = Astro.props;

const bgColors = {
	primary: 'bg-primary',
	secondary: 'bg-secondary',
	default: 'bg-default',
};

let background = bgColors[bg];
---

<section id={id} class={`${background} flex flex-col items-center`}>
	<div class="flex flex-col items-center gap-4">
		<h2 class="text-2xl md:text-3xl lg:text-4xl font-extrabold tracking-tight text-center text-gradient">
			{title}
		</h2>
	</div>
	<slot />
</section>
